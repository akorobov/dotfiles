[
  {
    "label": "Run python selection",
    "command": "python3",
    "args": ["-c", "\"$ZED_SELECTED_TEXT\""],
    "use_new_terminal": false
  },
  {
    "label": "Run python file",
    "command": "python3",
    "args": ["$ZED_FILE"],
    "use_new_terminal": false
  },
  {
    "label": "Create venv",
    "command": "uv",
    "args": ["venv", "$ZED_WORKTREE_ROOT/.venv"],
    "use_new_terminal": false
  },
  {
    "label": "Delete venv",
    "command": "rm",
    "args": ["-rf", "$ZED_WORKTREE_ROOT/.venv"],
    "use_new_terminal": false
  },
  // c++
  {
    "label": "Run c++ file",
    "command": "c++ --std=c++17 $ZED_FILE && ./a.out",
    "use_new_terminal": false
  },
  // go
  {
    "label": "Run go file",
    "command": "go run $ZED_FILE",
    "use_new_terminal": false
  }
]
